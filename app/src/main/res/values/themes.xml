<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FixerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FixerApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.FixerApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.FixerApp.LargeComponent
        </item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.FixerApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.FixerApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.FixerApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.FixerApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.FixerApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.FixerApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.FixerApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FixerApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FixerApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.FixerApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.FixerApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.FixerApp.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>

        <item name="emphasisMediumAlpha">0.60</item>

        <item name="emphasisDisabledAlpha">0.38</item>
    </style>

    <style name="Theme.FixerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FixerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FixerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>