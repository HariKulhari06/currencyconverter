<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.asssignmentsdktesttask.ui.symbolselection.SymbolSelectionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_search_view"
            android:backgroundTint="?attr/colorSurface"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="10dp"
            android:drawableTint="?attr/colorOnSurface"
            android:hint="@string/search"
            android:inputType="text"
            android:paddingHorizontal="@dimen/recycler_view_item_space"
            android:singleLine="true"
            android:text="@={viewModel.searchQuery}"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_search" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>